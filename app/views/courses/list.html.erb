<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render 'search/form' %>
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <button class="btn btn-primary pull-right" id="btnExport">导出</button>
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>

              <tr>
                <th>课程编号</th>
                <th>课程名称</th>
                <th>上课时间</th>
                <th>课时/学分</th>
                <th>限选</th>
                <th>已选</th>
                <th>课程属性</th>
                <th>授课方式</th>
                <th>考试方式</th>
                <th>主讲教师</th>

              </tr>
            </thead>
            <tbody>

              <% tmp = search %>
              <% if tmp.empty? %>
              <% @course = list%>         
              <% else %>
              <% @course = tmp%>
              <%end%>     

              <% @courses.each do |course| %>
              <tr>

                <td><%= course.course_code %></td>
                <td><%= course.name %></td>
                <td><%= course.course_week %></td>
                <td><%= course.credit %></td>
                <td><%= course.limit_num %></td>
                <td><%= course.student_num %></td>
                <td><%= course.course_type %></td>
                <td><%= course.teaching_type %></td>
                <td><%= course.exam_type %></td>
                <td><%= course.teacher.name %></td>

                <!--选课界面功能实现  -->
                <% if course.join? %>
                <td><%= link_to "退选课程", no_join_course_url(course), class: 'btn btn-xs btn-danger' %></td>
                <% else %>
                <td><%= link_to "加入课程", join_course_url(course), class: 'btn btn-xs btn-info' %></td>
                <% end %>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= will_paginate @courses%>
        </div>
      </div>
    </div>
  </div>
</div>

<!--  课程表实时展示 -->
<div class="container" style="background-color: #E5E5E5;">
  <%= render "courselist" %>
</div>

<script>
  $('#refresh').bind('click', function () {
    refresh()
  })
</script>

<script>
  $('#btnExport').bind('click', function () {
    tableExport()
  })
</script>
